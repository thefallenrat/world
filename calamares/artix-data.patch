diff --git a/data/artix/modules/bootloader.conf b/data/artix/modules/bootloader.conf
new file mode 100644
index 000000000..d8e5076b0
--- /dev/null
+++ b/data/artix/modules/bootloader.conf
@@ -0,0 +1,12 @@
+---
+efiBootLoader: "grub"
+kernel: "/vmlinuz-linux-lts-x86_64"
+img: "/initramfs-linux-lts-x86_64.img"
+fallback: "/initramfs-linux-lts-x86_64-fallback.img"
+timeout: "10"
+kernelLine: ", with linux-lts"
+fallbackKernelLine: ", with linux-lts (fallback initramfs)"
