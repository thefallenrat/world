# $Id$
# Maintainer: Levente Polyak <anthraxx[at]archlinux[dot]org>
# Contributor: Ionut Biru <ibiru@archlinux.org>
# Contributor: Timm Preetz <timm@preetz.us>

pkgname=vala
pkgver=0.38.5
pkgrel=1
pkgdesc="Compiler for the GObject type system"
url="https://wiki.gnome.org/Projects/Vala"
arch=(x86_64)
license=(LGPL)
depends=(glib2 gtk-doc graphviz ttf-dejavu pkg-config gcc)
makedepends=(libxslt vala git help2man)
checkdepends=(dbus libx11 gobject-introspection)
provides=(valadoc)
conflicts=(valadoc)
replaces=(valadoc)
_commit=c389a822546ccf534c9cec38d55797e880a68a53  # tags/0.38.5^0
source=("git+https://git.gnome.org/browse/vala#commit=$_commit")
sha256sums=('SKIP')

pkgver() {
  cd $pkgname
  git describe --tags | sed 's/-/+/g'
}

prepare() {
  cd $pkgname
  NOCONFIGURE=1 ./autogen.sh
}

build() {
  cd $pkgname
  ./configure --prefix=/usr
  sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool
  make
}

check() {
  cd $pkgname
  make check
}

package() {
  cd $pkgname
  make DESTDIR="$pkgdir" install
}

# vim: ts=2 sw=2 et:
